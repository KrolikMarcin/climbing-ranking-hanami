<%=
  form_for :ascent, routes.ascents_path do
    fields_for :line do
      div class: 'input form-group' do
        label      :name
        text_field :name, class: 'form-control'
      end

      div class: 'input form-group' do
        label  :grade
        select :grade, Hash[Line::GRADES.map { |v| [v,v] }]
      end

      div class: 'input form-group' do
        label      :crag
        text_field :crag, class: 'form-control'
      end

      div class: 'input form-group' do
        label  :kind
        select :kind, Hash['line' => 'line', 'boulder' => 'boulder']
      end
    end

    div class: 'input form-group' do
      label  :style
      select :style, Hash['os' => 'os', 'fl' => 'fl', 'rp' => 'rp']
    end

    div class: 'input form-group' do
      label      :belayer
      text_field :belayer, class: 'form-control'
    end

    div class: 'input form-group' do
      label      :date
      date_field :date, class: 'form-control'
    end

    div class: 'controls' do
      submit 'Add ascent', class: 'btn btn-success'
    end
  end
%>
